{

  "name": "blog",

  "version": "1.0.0",

  "description": "Blog exercise for nodeJS",

  "main": "src/index.js",

  "scripts": {

    "beautify": "lint-staged",

    "start": "nodemon --inspect src/index.js",

    "watch": "node-sass --watch src/resources/scss/ --output src/public/css/",

    "test": "echo \"Error: no test specified\" && exit 1"

  },

  "repository": {

    "type": "git",

    "url": "git+https://github.com/tripplen23/nodejs_blog.git"

  },

  "keywords": [

    "nodejs",

    "blog"

  ],

  "author": "Nguyen Duc Binh",

  "license": "ISC",

  "bugs": {

    "url": "https://github.com/tripplen23/nodejs_blog/issues"

  },

  "homepage": "https://github.com/tripplen23/nodejs_blog#readme",

  "lint-staged": {

    "src/**/*.{js,json,scss}": "prettier --single-quote --trailing-comma all --tab-width 4 --allow-empty --write"

  },

  "husky": {

    "hooks": {

      "pre-commit": "lint-staged",

      "pre-push": "run pre-commit --no-verify",

      "...": "..."

    }

  },

  "dependencies": {

    "express": "^4.18.2",

    "express-handlebars": "^6.0.6"

  },

  "devDependencies": {

    "husky": "^4.2.5",

    "lint-staged": "^13.1.0",

    "morgan": "^1.10.0",

    "node-sass": "^8.0.0",

    "nodemon": "^2.0.20",

    "prettier": "^2.8.1"

  }

}

